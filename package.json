{
  "name": "gtfs-to-blocks-service",
  "version": "1.2.3",
  "private": true,
  "author": "Brendan Nee <brendan@blinktag.com>",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "gtfs-to-blocks": "^0.3.5",
    "next": "^15.3.1",
    "react": "^19",
    "react-dom": "^19",
    "react-dropzone": "^14.3.8",
    "react-toastify": "^11.0.5",
    "tempy": "^3.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^15.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.4",
    "typescript": "^5"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md"
      }
    },
    "hooks": {
      "after:bump": "npm run build"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": "prettier --write",
    "*.jsx": "prettier --write",
    "*.ts": "prettier --write",
    "*.tsx": "prettier --write",
    "*.json": "prettier --write"
  }
